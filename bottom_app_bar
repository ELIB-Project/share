import 'package:flutter/material.dart';
import '../pages/home_page.dart';
import '../pages/membermanagement_page.dart';
import '../pages/plus_page.dart';
import '../pages/tool_manage.dart';

double iconSize = 35;

int colorA = 0xFF9E9E9E;
int colorB = 0xFF9E9E9E;
int colorC = 0xFF000000;
int colorD = 0xFF9E9E9E;
int colorE = 0xFF9E9E9E;

class BulidBottomAppBar extends StatefulWidget {
  const BulidBottomAppBar({Key? key}) : super(key: key);

  @override
  State<BulidBottomAppBar> createState() => _BulidBottomAppBarState();
}

class _BulidBottomAppBarState extends State<BulidBottomAppBar> with TickerProviderStateMixin{
  late TabController _controller = TabController(length: 5, vsync: this);

  @override
  void dispose() {
    _controller.dispose();
    super.dispose();
  }

  @override
  void initState() {
    super.initState();

    if(colorA == 0xFF000000) {
      _controller.index = 0;
    } else if(colorB == 0xFF000000) {
      _controller.index = 1;
    } else if(colorC == 0xFF000000) {
      _controller.index = 2;
    } else if(colorD == 0xFF000000) {
      _controller.index = 3;
    } else if(colorE == 0xFF000000) {
      _controller.index = 4;
    } else {
      _controller.index = 2;
    }
  }

  @override
  Widget build(BuildContext context) {
    return Container(
      child: DefaultTabController(
        length: 5,
        child: TabBar(
            controller: _controller,
            indicatorWeight: 4,
            indicatorSize: TabBarIndicatorSize.label,
            indicatorColor: Colors.green,
            unselectedLabelColor: Colors.grey,
            labelColor: Colors.black,
            unselectedLabelStyle: TextStyle(
              color: Colors.grey, fontSize: 11, fontWeight: FontWeight.bold),
            labelStyle: TextStyle(
              color: Colors.black, fontSize: 11, fontWeight: FontWeight.bold),

            onTap: (index) {
              switch (index) {
                case 0 : 
                setState(() {
                  colorA = 0xFF000000;

                  colorB = 0xFF9E9E9E;
                  colorC = 0xFF9E9E9E;
                  colorD = 0xFF9E9E9E;
                  colorE = 0xFF9E9E9E;
                  _navigateToToolManagementPage(context);
                });

                case 1 : 
                setState(() {
                  colorB = 0xFF000000;

                  colorA = 0xFF9E9E9E;
                  colorC = 0xFF9E9E9E;
                  colorD = 0xFF9E9E9E;
                  colorE = 0xFF9E9E9E;
                  _navigateToTrainingManagementPage(context);
                });
                
                case 2 : 
                setState(() {
                  colorC = 0xFF000000;

                  colorA = 0xFF9E9E9E;
                  colorB = 0xFF9E9E9E;
                  colorD = 0xFF9E9E9E;
                  colorE = 0xFF9E9E9E;
                  _navigateToHomePage(context); 
                });

                case 3 : 
                setState(() { 
                  colorD = 0xFF000000;

                  colorA = 0xFF9E9E9E;
                  colorB = 0xFF9E9E9E;
                  colorC = 0xFF9E9E9E;
                  colorE = 0xFF9E9E9E; 
                  _navigateToMemberManagementPage(context);         
                });

                case 4 : 
                setState(() {
                  colorE = 0xFF000000;

                  colorA = 0xFF9E9E9E;
                  colorB = 0xFF9E9E9E;
                  colorC = 0xFF9E9E9E;
                  colorD = 0xFF9E9E9E;
                  _navigateToPlusPage(context);
                });
              }    
            },
     
            tabs: [
              Tab(
                icon: Icon(
                  Icons.construction,
                  size: iconSize,
                  color: Color(colorA),
                ),
                text: "도구관리"
                
              ),

              Tab(
                icon: Icon(
                  Icons.edit_document, 
                  size: iconSize,
                  color: Color(colorB),
                ),
                text: "훈련관리"
              ),

              Tab(   
                icon: Icon(
                  Icons.home,
                  size: iconSize,
                  color: Color(colorC),
                ),
                text: "홈"
              ),


              Tab(
                icon: Icon(
                  Icons.groups,
                  size: iconSize,
                  color: Color(colorD),
                ),
                text: "구성원관리"
                
              ),

              Tab(
                icon: Icon(
                  Icons.more_horiz,
                  size: iconSize,
                  color: Color(colorE),
                ),
                text: "더보기"
              ),
            ],
            
          ),
          
      ),
    );    
  }

  void _navigateToToolManagementPage(BuildContext context) {
    // 도구관리 페이지
     Navigator.pushAndRemoveUntil(
        context,
        MaterialPageRoute(builder: (BuildContext context) => toolManagePage()),
        (route) => false);
  }

  void _navigateToTrainingManagementPage(BuildContext context) {
    // TODO: 훈련관리 페이지로 화면 전환
    //  Navigator.push(
    //   context,
    //   MaterialPageRoute(
    //     builder: (context) => TrainingPage(
    //       title: 'management',
    //     ),
    //   ),
    // );
  }

  void _navigateToHomePage(BuildContext context) {
    Navigator.pushAndRemoveUntil(
        context,
        MaterialPageRoute(builder: (BuildContext context) => HomePage()),
        (route) => false);
  }

  void _navigateToMemberManagementPage(BuildContext context) {
    Navigator.pushAndRemoveUntil(
        context,
        MaterialPageRoute(builder: (BuildContext context) => MemberManagementPage()),
        (route) => false);
  }

  void _navigateToPlusPage(BuildContext context) {
    Navigator.pushAndRemoveUntil(
        context,
        MaterialPageRoute(builder: (BuildContext context) => PlusPage(title: 'plus',),),
        (route) => false);
  }
}
